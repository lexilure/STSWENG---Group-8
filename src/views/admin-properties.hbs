        </div>
        <div class="col-6 d-flex justify-content-end">
            <a href="/admin/properties/add" type="button" class="btn btn-primary align-self-center">+ add property</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Placeholder for dynamic content -->
            {{#each properties}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.address}}</td>
                <td>{{this.status}}</td>
                <td class="text-end">
                  <a href="/properties/{{this._id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                  <a href="/admin/properties/edit/{{this._id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
                  <form method="POST" action="/admin/properties/delete/{{this._id}}">
                        <button type="submit" class="btn btn-light btn-small">
                            <i class="bi bi-person-x"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>         
          {{/each}} 
        </tbody>
    </table>
